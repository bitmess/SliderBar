# Uncomment the next line to define a global platform for your project
platform :ios, '8.0'
# Uncomment this line if you're using Swift
# use_frameworks!
# 禁用Pods库的警告
inhibit_all_warnings!


abstract_target 'iOS' do


    # 网络
    pod 'AFNetworking'          # HTTP
    pod 'CocoaAsyncSocket'      # Socket
    
    # 数据
    pod 'FMDB'                  # SQLite
    
    # UI
    pod 'UIView+Utils'
    pod 'Masonry'               # Auto Layout
    pod 'pop'                   # Facebook 动画框架
    pod 'SDWebImage'            # UIImageView 加载图片用到的

    
    # Category
    pod 'YYKit'
    pod 'KVOController'
    pod 'ReactiveObjC'         # RAC
    pod 'ObjectiveSugar'        # 一些语法糖
    pod 'UITableView+FDTemplateLayoutCell'
    
    # 功能组件
    pod 'SAMKeychain'           # Keychain工具类

    # Router
    pod 'MGJRouter'

  target 'SliderBar' do
      
      pod 'Reveal-iOS-SDK', :configurations => ['Debug']

  end




end
